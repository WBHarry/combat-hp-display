 <form autocomplete="off" onsubmit="event.preventDefault();">
    <div>
        <div class="flexrow">
            <div class="convert-col">
                <label>{{localize "combat-hp-display.actorConverter.from"}}</label>
                <select name="from" id="from">
                    {{#each optionsFrom}}
                        <option value={{this.value}} {{#if (eq this.value ../from)}}selected{{/if}}>{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="convert-col">
                <label>{{localize "combat-hp-display.actorConverter.to"}}</label>
                <select name="to" id="to">
                    {{#each optionsTo}}
                        <option value={{this.value}} {{#if (eq this.value ../to)}}selected{{/if}}>{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <button id="convert-all" class="menu-element">{{localize "combat-hp-display.actorConverter.convertAll"}}</button>
        <button id="convert-map" class="menu-element">{{localize "combat-hp-display.actorConverter.convertMap"}}</button>
    </div>
 </form>